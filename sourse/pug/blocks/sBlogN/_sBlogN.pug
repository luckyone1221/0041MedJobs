mixin sUsefullItemAlt(data)
  +b.blog-item(class=data.addClasses)
    +e.img
      img(loading="lazy" src=`img/@2x/sUsefull-${data.imgNum}.jpg` alt='')
    +e.articles(href='#') Статьи
    +e.title(href='#')=data.title
    +e.descr=`${data.descr || 'Что можно считать стыдной работой? У каждого своя история'}`
    +e.date 19 ноября 2021