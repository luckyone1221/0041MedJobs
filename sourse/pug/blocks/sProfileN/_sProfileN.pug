mixin customSlect(selectName, optionsArr=['услуга 1', 'очень очень долгая услуга услуга 2', 'очень долгая услуга'], keyClass='default-select-js', addContClasses)
	+b.custom-select(class=addContClasses)
		select(name=selectName class=keyClass)&attributes(attributes)
			if block
				block
			else
				- for (let item of optionsArr)
					option(value=item)=item

mixin asideMenu()
	+e.aside-menu.aside-menu-js
		if block
			block
		else
			ul
				li: a.active(href='#box-1') Личные данные
				li: a(href='#box-2') Безопасность
				li: a(href='#box-3') Социальные профили
				li: a(href='#box-4') Настройка уведомлений

mixin socProfieItem(iconName, addClasses='', del=false)
	.col-auto
		+e.soc-item(class=addClasses)
			+e.s-icon(href="#")&attributes(attributes)
				+icon(`soc-${iconName}`)
			if del
				+e.s-link(href="#") Удалить
			else
				+e.s-link.link-modal(href=`#add-soc-${iconName}`) Добавить

mixin customRadio(txt, name, val)
	+b.LABEL.custom-radio
		input(type="radio" class="invisible" name=name value=val)&attributes(attributes)
		span.circle
		span.txt=txt

mixin profileNBox(title, boxId, titleClasses)
	+e.box.sidebar-box-js(id=boxId)
		+form-wrap
			+e.b-title(class=titleClasses)=title
			+e.b-row.row&attributes(attributes)
				block

mixin lSidebarN()
	+b.l-side-menu
		+e.slider-wrap
			.swiper-container.sidebar-slider-js
				.swiper-wrapper
					if block
						block
					else
						+lSidebarSlide(1,'Подборки вакансий')
						+lSidebarSlide(2,'Мое резюме')
						+lSidebarSlide(3,'Настройки профиля')(class='active')
						+lSidebarSlide(4,'Избранные вакансии')

mixin lSidebarSlide(imgNum, txt)
	.swiper-slide
		+e.item.sidebar-item-js(href="#")&attributes(attributes)
			+e.icon
