mixin headerAlt(data)
	// start headerAlt
	+b.HEADER.headerAlt#headerAlt&attributes(attributes)
		+e.container.container-fluid
			+e.row.row--mb.align-items-center
				.col.col-md-auto
					+e.logo(href='#')
						img(loading="lazy" src="img/svg/logo.svg" alt="")
				+e.search-col.col-md.order-last.order-md-0
					+e.search
						+e.INPUT.s-input.form-control.search-inp-js(type="text" placeholder="Поиск по вакансиям")
						+e.search-btn.search-btn-js(type='button')
							+icon('zoom-2')
				.col-auto
					+e.bell.bell-js.active
						+icon('bell')
						+bellDD()
				.col-auto
					+e.lc-cont.lc-cont-js
						+e.lc-row.row.align-items-center.lc-dd-btn-js
							.col-auto
								+e.lc-txt Мой кабинет
							.col-auto
								+e.lc-img
									img(loading="lazy" src="img/svg/sm-portrait-stab.svg" alt="")
							+e.lc-icon.col-auto
								+icon('chevron-down')
						+lcDD()
				.col-auto.d-md-none
					+e.burger.mvp-burger-js
						span
		+mvpMmenu()
	// end headerAlt

mixin bellDD()
	+b.bell-dd--js
		+e.box
			-for (var i = 0; i < 2; i++)
				+bellDDMessage('У вас новое сообщение', 'Сегодня, 15:38')
				+bellDDMessage('У вас новый отклик на резюме', 'Вчера, 10:09')
				+bellDDMessage('У вас новый взаимный отклик', '22 марта 2021')
				+bellDDMessage('У вас новое сообщение', 'Вчера, 10:09')
				+bellDDMessage('У вас новый взаимный отклик', '22 марта 2021')

mixin bellDDMessage(title, date)
	+e.message(href='#')
		+e.title=title
		+e.date=date


mixin lcDD()
	+b.lc-dd--js
		+e.box
			+e.name Константинопольский К. К.
			ul
				li: a(href="#") Мое резюме
				li: a(href="#") Настройки профиля
				li: a(href="#") Подборки вакансий
				li: a.muted(href="#") Выйти из профиля

mixin mvpMmenu()
	+b.mvp-menu--js
		ul
			li: a(href='#') О компании
			li: a(href='#') Контакты
			li: a(href='#') Помощь