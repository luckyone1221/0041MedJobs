mixin sLogoes(data)
	// start sLogoes
	+b.SECTION.sLogoes.section#sLogoes&attributes(attributes)
		.container
			+b.section-title--lined.text-center
				h2
					| На нашем сайте
					|
					br.d-md-none
					| представлены вакансии
					br
					| частных и государственных
					|
					br.d-xl-none
					| медицинских организаций
			+e.row.row
				-for(var i = 1; i < 13; i++)
					+sLogoesItem(i)
			+e.h-row-cont.sLogoes-row-js
				+e.row--hidden.row.hidden-row-js
					-for (var i = 13; i < 25; i++)
						+sLogoesItem(i)
			+e.show-hide-cont.text-center.pt-18.pt-sm-24
				+e.show-hide-btn.sLogoes-btn-js
					span Показать еще
					span Скрыть
	// end sLogoes

mixin sLogoesItem(imgNum)
	.col-4.col-md-3.col-xl-2
		+e.LABEL.item
			input(type="checkbox" class="invisible" name=`sLogoesChb${imgNum}`)
			.logo-img
				img(loading="lazy" src=`img/@2x/sLogoes-${imgNum}.png` alt="")