mixin mob-mnu()
	+b.mm--js.d-xl-none
		.container
			+mnu()
	//  мобильное меню

mixin top-nav() 
	// start top-nav
	+b.top-nav.block-with-lazy
		+e.container.container
			+e.row.row
				.col.col-xl-auto
					+e.logo(href='#')
						img(loading="lazy" src="img/svg/logo.svg" alt="")
				.col.d-none.d-xl-block
					+mnu()
				.col-auto
					+e.location(href='#')
						+icon('location')
						+e.loc-txt Санкт-Петербург
				.col-auto.d-none.d-lg-block
					+e.p-cab
						+e.pc-img
							img(loading="lazy" src="img/svg/user-stab.svg" alt="")
						+e.pc-txt Личный кабинет
						+icon('chevron-down')
				.col-auto.d-xl-none
					+e.burger.burger-js
						span
	// end top-nav